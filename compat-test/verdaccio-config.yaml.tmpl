auth:
  auth-memory:
    users:
      foo:
        name: test
        password: test
uplinks:
  npmjs:
    url: https://registry.npmjs.org/
    maxage: 60s

packages:
  '${pkg_name}':
    access: $all
  '@*/*':
    access: $all
    proxy: npmjs
  '**':
    access: $all
    proxy: npmjs
middlewares:
  audit:
    enabled: true
log:
 - {type: stdout, format: pretty, level: debug}
listen:
  - ${local_registry}
